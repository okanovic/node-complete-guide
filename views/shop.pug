
extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet" href="/css/forms.css")
    link(rel="stylesheet" href="/css/product.css")

block content 
    main
        if prods.length > 0
            .grid 
                each product in prods
                    article.card.product-item
                        header.card__header 
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://cdn.pixabay.com/photo/2015/11/19/21/10/glasses-1052010__340.jpg" alt="Book")
                        div.card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many even more
                        .card__actions
                            button.btn Add To Chart   
        else 
            h1 No products